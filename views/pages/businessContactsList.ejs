<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body class="container">

        
        <!-- Welcome Page -->
        <main>
            <div class="jumbotron" style="background-color: #DAE5D0; text-align: center;">
                <h1>Business Contacts List</h1>
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if(data.length){
                     
                      for(var i = 0; i< data.length; i++) {
                        var update = "/update" + data[i].email;  
                        %>  
                      <tr>

                        <th scope="row"><%= (i+1) %></th>
                        <td><%= data[i].name%></td>
                        <td><%= data[i].email%></td>
                        <td><a href="../update/<%= data[i]._id%>""+ class="btn btn-dark">Update</a> <a href="../delete/<%= data[i]._id%>""+ class="btn btn-alert ml-2">Delete</a></td>
                      </tr>
                      <% }
                               
                       }else{ %>
                           <tr>
                              <td colspan="3">No user</td>
                           </tr>
                        <% } %>    
                      
                    </tbody>
                    </table>
            </div>
        </main>

        <footer>
            <%- include('../partials/footer'); %>
        </footer>

    </body>
</html>