<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body class="container">

        <header>
            <%- include('../partials/header'); %>
        </header>

        <!-- Contact Info -->
        <main>
            <div class="jumbotron" style="background-color: #DAE5D0; text-align: center;">
                <h1>CONTACT INFO</h1>
                <div class="mt-3">
                    <i class="material-icons">mail</i>
                    <p>pjay9425@gmail.com</p>
                    <img src="images/linkedin.png"></img>
                    <p>https://www.linkedin.com/in/jay-patel-799034184</p>

                    <!-- Form -->
                    <div class="mt-5 form-group">
                        <form method="POST" action="/">
                            <div class="mb-3 input-group w-50">
                                <label>First Name :</label>
                                <input type="text" name="firstname" id="firstname" class="form-control">
                            </div>
                            <div class="mb-3 input-group w-50">
                                <label>Last Name :</label>
                                <input type="text" name="lastname" id="lastname" class="form-control">
                            </div>
                            <div class="mb-3 input-group w-50">
                                <label>Contact :</label>
                                <input type="text" name="contact" id="contact" class="form-control">
                            </div>
                            <div class="mb-3 input-group w-50">
                                <label>Email :</label>
                                <input type="text" name="email" id="email" class="form-control">
                            </div>
                            <div class="mb-3 input-group w-50">
                                <label>Message :</label>
                                <textarea  type="textarea" name="message" id="message" class="form-control"></textarea>
                            </div>
                        </form>
                        <div>
                            <a class="nav-link" href="/"><button class="btn btn-dark">Submit</button></a>
                        </div>
                    </div>
                </div>  
            </div>
        </main>

        <footer>
            <%- include('../partials/footer'); %>
        </footer>

    </body>
</html>
